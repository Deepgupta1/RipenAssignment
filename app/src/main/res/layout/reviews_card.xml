<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:orientation="vertical"
    android:background="@drawable/light_border"
    android:layout_marginLeft="20dp"

    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/graphie_regular"
        android:lineSpacingExtra="3dp"
        android:maxLines="3"
        android:text="Extremely happy with the service and all the staff and i love the comments I get about how great my hair cut and color looks."
        android:textColor="@color/about"
        android:textSize="14sp" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_margin="1dp"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/profile_pic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="11dp"
            android:fontFamily="@font/graphie_semibold"
            android:text="Manisha Rajput"
            android:textColor="@color/headings_color"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@id/textView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/name" >
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_yellow_star"/>
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_yellow_star"/>
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_yellow_star"/>
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_yellow_star"/>
            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_margin="2dp"
                android:src="@drawable/ic_grey_star"/>
            <ImageView
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:src="@drawable/dark_circle" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 days ago"
                android:fontFamily="@font/graphie_regular"
                android:textColor="@color/about"
                android:textSize="14sp"/>

        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>






</LinearLayout>