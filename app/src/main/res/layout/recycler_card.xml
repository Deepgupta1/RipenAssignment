<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="20dp"
    android:layout_marginBottom="15dp"
    android:id="@+id/card_lay"
    android:background="@drawable/light_border">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="197dp"
        android:scaleType="centerCrop"
        android:src="@drawable/house"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_marginTop="14.48dp"
        android:layout_marginEnd="15.34dp"
        android:layout_width="23.32dp"
        android:layout_height="21dp"
        android:src="@drawable/ic_hollow_heart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/house"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/blur"
        android:text="HOUSE"
        android:fontFamily="@font/graphie_regular"
        android:textSize="13sp"
        android:paddingHorizontal="8dp"
        android:paddingVertical="7dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="9dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/white_circle"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/white_circle"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/white_circle"/>
        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/white_circle"/>
        <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:layout_marginHorizontal="2dp"
            android:src="@drawable/white_circle"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/price_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <TextView
            android:id="@+id/price_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/graphie_bold"
            android:text="$ 2499 "
            android:textColor="@color/headings_color"
            android:textSize="19sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/graphie_regular"
            android:text="/month"
            android:textColor="@color/headings_color"
            android:textSize="17sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/price_linear">

        <TextView
            android:id="@+id/description_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="11dp"
            android:fontFamily="@font/graphie_regular"
            android:text="2 Beds | 2 Baths"
            android:textColor="@color/text_color"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/circle" />

        <TextView
            android:id="@+id/type_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:fontFamily="@font/graphie_regular"
            android:text="Semi Furnished"
            android:textColor="@color/text_color"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="10dp"
        android:background="@color/orange"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="5.53dp"
        android:paddingTop="4dp"

        android:paddingBottom="3dp"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/imageView">

        <ImageView
            android:layout_width="10.69dp"
            android:layout_height="10.69dp"
            android:src="@drawable/ic_star" />

        <TextView
            android:id="@+id/rating_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:fontFamily="@font/graphie_semibold"
            android:text="3.5"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:layout_width="9.8dp"
            android:layout_height="12.81dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_location" />

        <TextView
            android:id="@+id/location_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.2dp"
            android:text="3 Court Square, Long Island City, NY 11101"
            android:textColor="@color/text_color"
            android:textSize="13sp" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/light_bg"
android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginLeft="9dp"
            android:src="@drawable/profile_pic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="9dp"
            android:fontFamily="@font/graphie_semibold"
            android:text="Skyline Tower"
            android:textColor="@color/headings_color"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@id/textView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/graphie_regular"
            android:text="Hosted by Daniel Harris"
            android:textColor="@color/headings_color"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />


        <LinearLayout
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:background="@drawable/button_border"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
          >

            <ImageView
                android:id="@+id/ic_chat_img"
                android:layout_width="16.5dp"
                android:layout_height="13dp"
                android:layout_marginRight="4dp"
                android:src="@drawable/ic_chat_white"
           />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat now"
                android:textSize="14sp"
                android:fontFamily="@font/graphie_semibold"
                android:textColor="@color/white"

                android:layout_centerVertical="true" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>